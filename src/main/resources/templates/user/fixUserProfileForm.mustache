                <div class="body-text">
                    <div class="body-head">
                        비밀번호
                    </div>
                    <div class="body-main">
                        <input name="password" class="input-box" contenteditable="true" placeholder="baronjae"
                            value="{{userInfo.password}}">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
                <div class="body-text">
                    <div class="body-head">
                        비밀번호 확인
                    </div>
                    <div class="body-main">
                        <input class="input-box" contenteditable="true" placeholder="baronjae">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
                <div class="body-text">
                    <div class="body-head">
                        이름
                    </div>
                    <div class="body-main">
                        <input name="username" class="input-box" contenteditable="true" placeholder="seong hun Jin"
                            value="{{userInfo.username}}">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
                <div class="body-text">
                    <div class="body-head">
                        휴대폰번호
                    </div>
                    <div class="body-main">
                        <input name="tel" class="input-box" contenteditable="true" placeholder="01094719693"
                            value="{{userInfo.tel}}">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
                <div class="body-text">
                    <div class="body-head">
                        주소
                    </div>
                    <div class="body-main">
                        <input name="address" class="input-box" contenteditable="true"
                            placeholder="부산 진구 중앙대로 688, 305호" value="{{userInfo.address}}">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
                <div class="body-text">
                    <div class="body-head">
                        생년월일
                    </div>
                    <div class="body-main">
                        <input name="birth" class="input-box" contenteditable="true" placeholder="1993.04.22"
                            value="{{userInfo.birth}}">
                        </input>
                    </div>
                </div>
                <hr class="line" style="margin-top: 0px;">
            </div>
            <br>
            <br>
            <div style="display: flex; justify-content: center;">
                <button type="submit" class="button">수정완료</button>
            </div>
    </div>
    </form>
